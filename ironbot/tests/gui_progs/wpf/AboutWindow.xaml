        Title="AboutWindow" Height="300" Width="300">
    <StackPanel  Orientation="Vertical">
        <DockPanel>
            <ToolBarTray DockPanel.Dock="Top">
                <ToolBar AutomationProperties.AutomationId="Toolbar1">
                    <MenuItem Header="MenuItem" Click="Click1" />
                </ToolBar>
                <ToolBar AutomationProperties.AutomationId="Toolbar2">
                    <Button Click="Click2" Content="Toolbar2" />
                </ToolBar>
            </ToolBarTray>
            <TextBox AcceptsReturn="True" />
        </DockPanel>
        <Grid>
            <TextBlock Name="textBlock1" Text="AboutWindow" AutomationProperties.AutomationId="Text1" />
        </Grid>
    </StackPanel>
</Window>
